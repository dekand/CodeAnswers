@page
@model CodeAnswers.Areas.Identity.Pages.Account.Manage.ImageModel

@{
    ViewData["Title"] = "Сменить изображение профиля";
    ViewData["ActivePage"] = ManageNavPages.Image;
}

<h1>Изображение профиля</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <img src="@Model.Images.ImagePath" width="250" height="250" alt="" />
    </div>
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Images.Id" />
            <input type="hidden" asp-for="Images.Name" />
            <input type="hidden" asp-for="Images.ImagePath" />
            <input type="hidden" asp-for="Images.UserId" />
            
            <div class="form-group">
                <label class="control-label">Загрузить новое изображение</label>
                <input name="uploadedFile" class="form-control" type="file"/>
                <span asp-validation-for="Images.UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить изменение" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

