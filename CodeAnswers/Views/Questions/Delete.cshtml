@model CodeAnswers.Models.Questions

@{
    ViewData["Title"] = "Удаление вопроса";
}

<h1>Удаление вопроса</h1>

<h3>Уверены, что хотите удалить вопрос?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Заголовок
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Description);
        </dd>
        <dt class = "col-sm-2">
            Создан
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        @if (Model.ModifiedDate.HasValue)
        {
            <dt class = "col-sm-2">
                Изменен
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ModifiedDate)
        </dd>}
        <dt class = "col-sm-2">
            Рейтинг
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            Пользователь
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
